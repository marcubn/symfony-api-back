{% extends '@crudgeneratorbundle/base.html.twig' %}

{% block title %}
    Edit offer
{% endblock %}

{% block body %}

    {% if app.user == null %}
        <a href="/login" class="btn btn-info"> You need to login first</a>
        <a href="/register" class="btn btn-success"> Or register as a new user</a>
    {% endif %}

    {% if app.user != null %}
        <div id="top" class="row">
            <div class="page-header">
                <h2>Edit offer <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
            </div>
        </div>



        <div class="row">
            <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                <div class="alert alert-{{ type }}">
                    {{ flashMessage|raw }}
                </div>
                 {% endfor %}
                 {% endfor %}
            </div>
        </div>


            {{ form_start(edit_form) }}

            {{ form_widget(edit_form) }}
            <p>
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
                </button>
            </p>
            {{ form_end(edit_form) }}

            <hr/>


        <div class="form-group">
            <a class="btn btn-default" href="{{ path('offer') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-info" href="{{ path('offer_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
        </div>

        </div>
    {% endif %}
{% endblock %}

