{% extends '@crudgeneratorbundle/base.html.twig' %}


{% block title %}
    Show offer
{% endblock %}

{% block body %}

    {% if app.user == null %}
        <a href="/login" class="btn btn-info"> You need to login first</a>
        <a href="/register" class="btn btn-success"> Or register as a new user</a>
    {% endif %}

    {% if app.user != null %}
        <div id="top" class="row">
            <div class="page-header">
                <h2>View offer <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Id</strong></p>
                <p>
                    {{ offer.id }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Title</strong></p>
                <p>
                    {{ offer.title }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Description</strong></p>
                <p>
                    {{ offer.description }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Email</strong></p>
                <p>
                    {{ offer.email }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Imageurl</strong></p>
                <p>
                    {{ offer.imageUrl }}
                </p>

            </div>
            <div class="col-md-6">
                <p><strong>Creationdate</strong></p>
                <p>
                    {% if offer.creationDate %}{{ offer.creationDate|date('Y-m-d H:i:s') }}{% endif %}
                </p>

            </div></div>

        <hr/>


        <div class="form-group">
            <a class="btn btn-default" href="{{ path('offer') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-primary" href="{{ path('offer_edit', { 'id':  offer.id }) }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
            </a>
            <a class="btn btn-info" href="{{ path('offer_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
        </div>
    {% endif %}


{% endblock %}

